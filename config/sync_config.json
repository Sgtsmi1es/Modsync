    "nfs_server": "10.10.1.12",
    "nfs_share": "/mnt/user/bridger_storage",
    "mount_point": "/mnt/bridger_storage",
    "smb_share": "\\\\10.10.1.12\\bridger_storage"
  },
  "sync_directories": [
    {
      "name": "ksp_mods",
